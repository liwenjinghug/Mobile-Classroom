/* 作业列表样式 - 参考考试列表风格 */
.page {
  padding: 12rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题和操作栏 */
.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #fff;
  border-radius: 8rpx;
}

.header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 8rpx;
}

/* 标签切换（筛选器） */
.filter-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 12rpx 0;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 8rpx 0;
  font-size: 26rpx;
  color: #666;
  border-bottom: 3rpx solid transparent;
  transition: all 0.3s;
}

.filter-item.active {
  color: #1890ff;
  font-weight: bold;
  border-bottom-color: #1890ff;
}

/* 加载和空状态 */
.loading, .empty {
  padding: 120rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 作业列表项 */
.homework-item {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s;
  position: relative;
}

.homework-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 作业标题区域 */
.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
  padding-right: 12rpx;
}

/* 状态标签 */
.status-tag {
  padding: 6rpx 14rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.status-tag.status-ongoing {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.status-tag.status-expired {
  background-color: #fff1f0;
  color: #f5222d;
  border: 1rpx solid #ffa39e;
}

.status-tag.status-submitted {
  background-color: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffd591;
}

.status-tag.status-graded {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

/* 作业信息 */
.homework-info {
  margin-bottom: 8rpx;
}

.info-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  min-width: 140rpx;
  flex-shrink: 0;
}

.value {
  color: #666;
  flex: 1;
}

.value.expired {
  color: #f5222d;
}

.value.score {
  color: #1890ff;
  font-weight: bold;
}

/* 箭头指示 */
.arrow-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #d9d9d9;
  font-weight: 300;
}

/* 高级筛选面板 */
.filter-panel {
  background: white;
  margin-bottom: 16rpx;
  padding: 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.filter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.filter-label {
  width: 140rpx;
  color: #666;
  flex-shrink: 0;
}

.filter-input {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  font-size: 26rpx;
}

.filter-picker {
  flex: 1;
  padding: 12rpx 16rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-separator {
  margin: 0 12rpx;
  color: #999;
}

.filter-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-btn {
  flex: 1;
}

.reset-btn {
  background: #f5f5f5;
  color: #666;
}

.apply-btn {
  background: #1890ff;
  color: white;
}
