/* 作业详情样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-box {
  padding: 120rpx 0;
  text-align: center;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 作业信息卡片 */
.homework-info {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-tag.ongoing {
  background: #e8f4fd;
  color: #409eff;
}

.status-tag.expired {
  background: #fef0f0;
  color: #f56c6c;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item .label {
  color: #999;
  width: 140rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
}

.info-item .score {
  color: #667eea;
  font-weight: bold;
}

.expired-text {
  color: #f56c6c !important;
}

/* 作业内容 */
.homework-content {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.content-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.attachments {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.attachment-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.attachment-text {
  font-size: 24rpx;
  color: #999;
}

/* 答题区域 */
.answer-section, .submitted-answer {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.answer-input {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.answer-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.submitted-text {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.submit-time {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.submitted-section {
  margin-bottom: 24rpx;
}

.submitted-section:last-of-type {
  margin-bottom: 0;
}

.submitted-label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
}

.btn-submit, .btn-view-grade {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-submit[disabled] {
  background: #ccc;
}

.btn-view-grade {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.expired-tip {
  text-align: center;
  padding: 24rpx;
  color: #f56c6c;
  font-size: 28rpx;
  background: #fef0f0;
  border-radius: 8rpx;
}

/* 文件上传区域 */
.file-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

.file-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.file-title {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.upload-btn {
  background: #1890ff;
  color: white;
  border: none;
}

.upload-btn[disabled] {
  background: #ccc;
}

/* 文件列表 */
.file-list {
  margin-top: 12rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e8e8e8;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  cursor: pointer;
}

.file-info:active {
  opacity: 0.7;
}

.file-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.file-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.file-size {
  font-size: 22rpx;
  color: #999;
  margin-right: 12rpx;
}

.file-delete {
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  color: #f5222d;
  font-weight: bold;
}

.file-empty {
  padding: 40rpx 0;
  text-align: center;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}
