/* 作业详情样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 作业信息卡片 */
.homework-info {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.info-header {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

/* 多状态标签行 */
.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 截止状态 */
.tag-ongoing {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  color: #1890ff;
}

.tag-expired {
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
  color: #f5222d;
}

/* 提交状态 */
.tag-submitted {
  background: linear-gradient(135deg, #f6ffed 0%, #d9f7be 100%);
  color: #52c41a;
}

.tag-not-submitted {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  color: #fa8c16;
}

/* 批改状态 */
.tag-graded {
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
  color: #722ed1;
}

.tag-pending {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  color: #8c8c8c;
}

/* 分数标签 */
.tag-score {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item .label {
  color: #999;
  width: 140rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
}

.info-item .score {
  color: #667eea;
  font-weight: bold;
}

.expired-text {
  color: #f56c6c !important;
}

/* 成绩信息 */
.grade-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
  margin: 20rpx -30rpx -30rpx -30rpx;
  padding: 24rpx 30rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.grade-score {
  color: #722ed1 !important;
  font-weight: bold;
  font-size: 32rpx !important;
}

.remark {
  color: #722ed1 !important;
  font-style: italic;
}

/* 作业内容 */
.homework-content {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.content-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.attachments {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.attachment-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.attachment-text {
  font-size: 24rpx;
  color: #999;
}

/* 答题区域 */
.answer-section, .submitted-answer {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.answer-input {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.answer-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.submitted-text {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.submit-time {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.submitted-section {
  margin-bottom: 24rpx;
}

.submitted-section:last-of-type {
  margin-bottom: 0;
}

.submitted-label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
}

.btn-submit, .btn-view-grade {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-submit[disabled] {
  background: #ccc;
}

.btn-view-grade {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.expired-tip {
  text-align: center;
  padding: 24rpx;
  color: #f56c6c;
  font-size: 28rpx;
  background: #fef0f0;
  border-radius: 8rpx;
}

/* 文件上传区域 */
.file-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

.file-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.file-title {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.upload-btn {
  background: #1890ff;
  color: white;
  border: none;
}

.upload-btn[disabled] {
  background: #ccc;
}

/* 文件列表 */
.file-list {
  margin-top: 12rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e8e8e8;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  cursor: pointer;
}

.file-info:active {
  opacity: 0.7;
}

.file-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.file-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.file-size {
  font-size: 22rpx;
  color: #999;
  margin-right: 12rpx;
}

.file-delete {
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  color: #f5222d;
  font-weight: bold;
}

.file-empty {
  padding: 40rpx 0;
  text-align: center;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}
