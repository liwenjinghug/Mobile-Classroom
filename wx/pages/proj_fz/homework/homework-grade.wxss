/* 成绩查看页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-box {
  padding: 120rpx 0;
  text-align: center;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-box {
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 成绩卡片 */
.grade-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  padding: 50rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
  text-align: center;
  color: white;
}

.grade-header {
  margin-bottom: 20rpx;
}

.grade-header .label {
  font-size: 28rpx;
  opacity: 0.9;
}

.score-display {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.score-number {
  font-size: 100rpx;
  font-weight: bold;
  line-height: 1;
}

.score-unit {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.grade-time {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 评语卡片 */
.remark-card, .attachment-card {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.remark-content, .attachment-content {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  word-break: break-all;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
}

.btn-back {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

