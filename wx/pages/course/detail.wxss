  font-size: 38rpx;
  font-weight: 800;
  color: #1e293b;
  line-height: 1.5;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 12rpx;
  display: flex;
