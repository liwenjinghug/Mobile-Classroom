  left: 16rpx;
  opacity: 0.3;
}

/* åŠŸèƒ½å…¥å£ç½‘æ ¼ */
.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  position: relative;
  z-index: 1;
  padding: 8rpx 0;
}

.function-item {
  background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
  border-radius: 20rpx;
  padding: 32rpx 16rpx 28rpx;
  text-align: center;
  box-shadow:
    0 8rpx 24rpx rgba(59, 130, 246, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

/* å¡ç‰‡å…‰æ³½æ•ˆæœ */
.function-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.5) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.function-item:active::before {
  opacity: 1;
}

.function-item:active {
  transform: translateY(-8rpx) scale(0.96);
  box-shadow:
    0 16rpx 40rpx rgba(59, 130, 246, 0.15),
    0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  border-color: rgba(59, 130, 246, 0.2);
}

.function-icon {
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 24rpx;
  margin: 0 auto 16rpx;
  text-align: center;
  font-size: 44rpx;
  color: #fff;
  position: relative;
  box-shadow:
    0 8rpx 20rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  transition: transform 0.3s ease;
}

.function-item:active .function-icon {
  transform: scale(0.9) rotateZ(-5deg);
}

.icon-text {
  display: inline-block;
  animation: iconPulse 2s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

