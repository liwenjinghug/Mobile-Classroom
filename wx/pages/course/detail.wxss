.loading {
  text-align: center;
  color: #64748b;
  padding: 60rpx 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading::before {
  content: '';
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #e2e8f0;
  border-top: 5rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-box {
  background: linear-gradient(135deg, #fff5f5 0%, #fee2e2 100%);
  border: 2rpx solid #fca5a5;
  border-radius: 16rpx;
  padding: 24rpx;
  color: #dc2626;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.15);
  position: relative;
  overflow: hidden;
  z-index: 1;
  font-size: 26rpx;
  line-height: 1.6;
}

.error-box::before {
  content: 'âš ï¸';
