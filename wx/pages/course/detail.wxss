.course-header {
  background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 32rpx;
  box-shadow:
    0 12rpx 32rpx rgba(59, 130, 246, 0.12),
    0 4rpx 12rpx rgba(0, 0, 0, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

/* å¡ç‰‡é¡¶éƒ¨æ¸å˜æ¡ */
.course-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #3b82f6, #2563eb, #8b5cf6, #ec4899);
  opacity: 0.9;
}

/* å¡ç‰‡å…‰æ³½æ•ˆæœ */
