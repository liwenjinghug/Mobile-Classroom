/* 页面容器 */
.container {
  padding: 24rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 课堂信息卡片 */
.course-header {
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f7ff 100%);
  border: 1rpx solid #d6e4ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(24, 144, 255, 0.12);
}

.course-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2d3d;
  line-height: 1.4;
}

.course-id {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #4f6b95;
}

/* 状态提示 */
.loading {
  text-align: center;
  color: #8c8c8c;
  padding: 24rpx 0;
}

.error-box {
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 12rpx;
  padding: 16rpx;
  color: #cf1322;
  margin-bottom: 16rpx;
}

/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.function-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.function-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.10);
}

.function-icon {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 50%;
  margin: 0 auto 8rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}

.icon-text { display: inline-block; }

/* 不同功能的配色 */
.homework-icon { background: linear-gradient(135deg, #ff9f7f 0%, #ff7f50 100%); }
.exam-icon { background: linear-gradient(135deg, #69c0ff 0%, #1890ff 100%); }
.sign-icon { background: linear-gradient(135deg, #95de64 0%, #52c41a 100%); }
.forum-icon { background: linear-gradient(135deg, #b37feb 0%, #722ed1 100%); }

.function-label {
  font-size: 24rpx;
  color: #333;
}
