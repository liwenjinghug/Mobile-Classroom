.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #e8f5ff 0%, #f5f9ff 50%, #fafbff 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* è£…é¥°æ€§èƒŒæ™¯å›¾æ¡ˆ */
.container::before {
  content: '';
  position: fixed;
  top: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  z-index: 0;
}

.container::after {
  content: '';
  position: fixed;
  bottom: -300rpx;
  left: -300rpx;
  width: 800rpx;
  height: 800rpx;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.06) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
  z-index: 0;
}

