<view class="container">
  <view style="padding:12px;background:#fff;border-radius:6px;">
    <text style="font-size:18px;font-weight:600;">{{course.className || course.title || '课堂详情'}}</text>
    <text style="display:block;color:#888;margin-top:6px;">课堂ID: {{course.id}}</text>
  </view>
  <view style="margin-top:12px;" class="icon-grid">
    <view class="icon-item" bindtap="goToHomework">
      <image src="/assets/icons/homework.png" style="width:44px;height:44px;"/>
      <text>作业</text>
    </view>
    <view class="icon-item" bindtap="goToExam">
      <image src="/assets/icons/exam.png" style="width:44px;height:44px;"/>
      <text>考试</text>
    </view>
    <view class="icon-item" bindtap="goToSign">
      <image src="/assets/icons/sign.png" style="width:44px;height:44px;"/>
      <text>签到</text>
    </view>
    <view class="icon-item" bindtap="goToForum">
      <image src="/assets/icons/forum.png" style="width:44px;height:44px;"/>
      <text>讨论</text>
    </view>
  </view>
</view>

