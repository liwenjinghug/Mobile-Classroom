.course-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #f8fafc 100%);
  position: relative;
}

.course-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1e40af 100%);
  border-radius: 0 0 50% 50% / 0 0 10% 10%;
  z-index: 0;
  opacity: 0.05;
  pointer-events: none;
}

/* Ê†áÁ≠æÈ°µÊ†∑Âºè - ËìùËâ≤‰∏ªÈ¢ò */
.tabs {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #e1e8f0;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #64748b;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: transparent;
}

.tab:active {
  background: rgba(59, 130, 246, 0.05);
}

.tab.active {
  color: #2563eb;
  font-weight: 700;
  background: linear-gradient(180deg, rgba(59, 130, 246, 0.05) 0%, transparent 100%);
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #3b82f6, #2563eb);
  border-radius: 3rpx 3rpx 0 0;
  box-shadow: 0 -2rpx 8rpx rgba(59, 130, 246, 0.4);
}

/* Ê†áÁ≠æÂÜÖÂÆπ */
.tab-content {
  padding: 20rpx;
}

/* ÊêúÁ¥¢Ê†è - ËìùËâ≤‰∏ªÈ¢ò */
.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 1rpx solid #e2e8f0;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.08);
}

.search-input:focus {
  border-color: #3b82f6;
  box-shadow: 0 2rpx 12rpx rgba(59, 130, 246, 0.15);
}

.search-btn {
  background: linear-gradient(135deg, #fff7ed 0%, #fed7aa 50%, #fdba74 100%);
  color: #c2410c;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(253, 186, 116, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(253, 186, 116, 0.3);
  transition: all 0.3s ease;
  font-weight: 600;
}

.search-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(253, 186, 116, 0.4);
}

/* ÂàóË°®ÂÆπÂô® */
.list-container {
  max-height: calc(100vh - 200rpx);
}

/* ËØæÂ†ÇÂç°Áâá - ËìùËâ≤‰∏ªÈ¢ò */
.class-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.class-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #3b82f6, #2563eb, #8b5cf6);
  opacity: 0.8;
}

.class-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  border-color: rgba(59, 130, 246, 0.2);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f1f5f9;
  position: relative;
}

.card-header::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, #3b82f6, transparent);
}

.class-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
  flex: 1;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.class-id {
  font-size: 22rpx;
  color: #3b82f6;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  padding: 10rpx 18rpx;
  border-radius: 12rpx;
  font-weight: 600;
  border: 1rpx solid #bfdbfe;
  letter-spacing: 0.5rpx;
}

.card-content {
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  align-items: flex-start;
  padding: 12rpx 0;
  border-radius: 8rpx;
  transition: background 0.2s ease;
}

.info-row:hover {
  background: rgba(59, 130, 246, 0.02);
}

.label {
  color: #64748b;
  min-width: 140rpx;
  font-weight: 600;
  position: relative;
  padding-left: 24rpx;
}

.label::before {
  content: '‚Ä¢';
  position: absolute;
  left: 8rpx;
  color: #3b82f6;
  font-weight: 900;
  font-size: 32rpx;
}

.value {
  color: #334155;
  flex: 1;
  line-height: 1.5;
  font-weight: 500;
}

/* Áä∂ÊÄÅÈ¢úËâ≤ - ËìùËâ≤Á≥ª */
.status-warning { 
  color: #f59e0b;
  background: #fef3c7;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.status-success { 
  color: #10b981;
  background: #d1fae5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.status-error { 
  color: #ef4444;
  background: #fee2e2;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

/* Êìç‰ΩúÊåâÈíÆ - ËìùËâ≤‰∏ªÈ¢ò */
.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  padding-top: 8rpx;
}

.btn {
  padding: 18rpx 36rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.btn.primary {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 50%, #7dd3fc 100%);
  color: #0369a1;
  box-shadow: 0 6rpx 16rpx rgba(125, 211, 252, 0.35), 0 2rpx 4rpx rgba(125, 211, 252, 0.2);
  border: 1rpx solid rgba(125, 211, 252, 0.5);
}

.btn.primary:active {
  transform: translateY(2rpx) scale(0.96);
  box-shadow: 0 3rpx 10rpx rgba(125, 211, 252, 0.4), 0 1rpx 2rpx rgba(125, 211, 252, 0.3);
}

.btn.danger {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 50%, #fca5a5 100%);
  color: #dc2626;
  box-shadow: 0 6rpx 16rpx rgba(252, 165, 165, 0.35), 0 2rpx 4rpx rgba(252, 165, 165, 0.2);
  border: 1rpx solid rgba(252, 165, 165, 0.5);
}

.btn.danger:active {
  transform: translateY(2rpx) scale(0.96);
  box-shadow: 0 3rpx 10rpx rgba(252, 165, 165, 0.4), 0 1rpx 2rpx rgba(252, 165, 165, 0.3);
}

.btn.disabled {
  background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
  color: #94a3b8;
  box-shadow: 0 2rpx 8rpx rgba(203, 213, 225, 0.3);
  cursor: not-allowed;
}

.no-action {
  color: #cbd5e1;
  font-size: 26rpx;
  font-style: italic;
  padding: 18rpx 0;
}

/* Âä†ËΩΩÂíåÁ©∫Áä∂ÊÄÅ */
.loading, .empty {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #64748b;
  font-size: 28rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.loading::before {
  content: '';
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #e2e8f0;
  border-top: 5rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty {
  background: white;
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  border: 3rpx dashed #cbd5e1;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.empty::before {
  content: 'üìö';
  display: block;
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty::after {
  content: 'ÊöÇÊó†Êï∞ÊçÆ';
  display: block;
  color: #94a3b8;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 375px) {
  .search-bar {
    flex-direction: column;
  }
  
  .search-input {
    width: 100%;
  }
  
  .card-actions {
    flex-direction: column;
  }
  
  .btn {
    width: 100%;
  }
}