/* pages/bind/bind.wxss */
.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
  margin-top: 50rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.form-group {
  width: 100%;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.tip {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.input-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.label {
  width: 120rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 30rpx;
}

.btn-bind {
  margin-top: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
}

.btn-scan {
  margin-top: 30rpx;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
}
