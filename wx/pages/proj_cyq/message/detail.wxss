/* 页面整体 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片容器 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  /* 柔和的悬浮阴影 */
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 40rpx;
}

/* 头部布局 */
.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 标签样式 */
.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  color: #fff;
  font-weight: 600;
  letter-spacing: 1rpx;
}
.tag.todo { background: #e6a23c; }
.tag.homework { background: #67c23a; }
.tag.exam { background: #f56c6c; }

.time {
  font-size: 24rpx;
  color: #909399;
}

/* 标题 */
.title {
  font-size: 38rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

/* 发送人信息 */
.sender-box {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  width: fit-content;
}
.sender-label {
  font-size: 24rpx;
  color: #909399;
}
.sender-name {
  font-size: 26rpx;
  color: #606266;
  font-weight: 500;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #ebeef5;
  margin: 30rpx 0;
}

/* 正文内容 */
.content-box {
  min-height: 200rpx;
  font-size: 30rpx;
  color: #444;
  line-height: 1.8; /* 舒适的阅读行高 */
  text-align: justify; /* 两端对齐 */
  word-wrap: break-word;
}