page { background-color: #f5f7fa; font-family: -apple-system, Helvetica, sans-serif; }
.container { height: 100vh; display: flex; flex-direction: column; }

/* 顶部 Tab */
.tabs { display: flex; background: #fff; padding: 24rpx 0; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); z-index: 99; }
.tab { flex: 1; text-align: center; font-size: 28rpx; color: #666; position: relative; }
.tab.active { color: #2d8cf0; font-weight: bold; font-size: 30rpx; }
.tab.active::after { content: ''; display: block; width: 40rpx; height: 6rpx; background: #2d8cf0; margin: 10rpx auto 0; border-radius: 4rpx; }
.badge { position: absolute; top: -12rpx; right: 30rpx; background: #ff4d4f; color: #fff; font-size: 20rpx; padding: 2rpx 10rpx; border-radius: 20rpx; }

/* 内容区 */
.content-area { flex: 1; padding: 20rpx; box-sizing: border-box; }

/* 通用卡片 */
.card { background: #fff; border-radius: 16rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03); }

/* 消息板块样式 */
.header-actions { display: flex; justify-content: flex-end; margin-bottom: 20rpx; }
.btn-group { display: flex; gap: 20rpx; }
.mini-btn { font-size: 24rpx; padding: 0 30rpx; margin: 0; height: 60rpx; line-height: 60rpx; }
.mini-btn.default { background-color: #f0f0f0; color: #333; }
.mini-btn.primary { background-color: #2d8cf0; color: #fff; }
.message-card.unread { border-left: 8rpx solid #2d8cf0; }
.card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.header-left { display: flex; align-items: center; }
.tag { font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 6rpx; color: #fff; margin-right: 10rpx; }
.tag.todo { background: #e6a23c; }
.tag.homework { background: #67c23a; }
.tag.exam { background: #f56c6c; }
.time { font-size: 24rpx; color: #999; }
.status-tag { font-size: 22rpx; padding: 2rpx 10rpx; border-radius: 4rpx; }
.status-unread { color: #ff4d4f; background-color: rgba(255, 77, 79, 0.1); border: 1rpx solid rgba(255, 77, 79, 0.2); }
.status-read { color: #999; background-color: #f5f5f5; }
.card-title { font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 12rpx; }
.card-body { font-size: 28rpx; color: #666; line-height: 1.6; }
.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; width: 100%; }
.card-footer { border-top: 1rpx solid #f5f5f5; margin-top: 16rpx; padding-top: 12rpx; text-align: right; }
.click-tip { font-size: 24rpx; color: #2d8cf0; }

/* 待办板块样式 */
.todo-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx; }
.section-title { font-size: 34rpx; font-weight: bold; color: #333; }
.add-btn { background: #2d8cf0; color: #fff; padding: 12rpx 30rpx; border-radius: 30rpx; font-size: 24rpx; }

.todo-row { display: flex; align-items: center; }

/* 【核心】自定义复选框样式 */
.check-container { padding: 10rpx 20rpx 10rpx 0; }
.check-circle { width: 40rpx; height: 40rpx; border-radius: 50%; border: 2rpx solid #ccc; display: flex; align-items: center; justify-content: center; background-color: #fff; transition: all 0.2s; }
.check-circle.checked { background-color: #2d8cf0; border-color: #2d8cf0; }

.todo-content { flex: 1; margin-left: 16rpx; }
.todo-content.done .todo-title { text-decoration: line-through; color: #bbb; }
.todo-title { font-size: 30rpx; color: #333; }
.expired-tag { font-size: 20rpx; color: #fff; background-color: #ff4d4f; padding: 2rpx 8rpx; border-radius: 4rpx; margin-left: 10rpx; vertical-align: middle; }
.todo-date { font-size: 24rpx; color: #999; margin-top: 6rpx; }
.delete-btn { color: #ff4d4f; padding: 20rpx; font-size: 32rpx; font-weight: bold; }

/* 公告板块样式 */
.notice-title { font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.notice-meta { font-size: 24rpx; color: #999; display: flex; justify-content: space-between; }
.empty-tip { text-align: center; color: #999; margin-top: 100rpx; font-size: 28rpx; }