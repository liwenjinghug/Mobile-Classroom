page { background-color: #fff; }
.container { padding: 40rpx; min-height: 100vh; box-sizing: border-box; }
.title { font-size: 40rpx; font-weight: bold; color: #333; margin-bottom: 24rpx; line-height: 1.4; }
.info { font-size: 24rpx; color: #999; display: flex; justify-content: space-between; }
.divider { height: 1rpx; background: #eee; margin: 30rpx 0; }
.content { font-size: 30rpx; color: #444; line-height: 1.8; }