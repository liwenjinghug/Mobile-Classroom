<view class="container">
  <view class="form-item">
    <view class="label">标题</view>
    <input class="input" placeholder="请输入待办事项" value="{{form.title}}" bindinput="onInput" data-field="title" />
  </view>
  
  <view class="form-item">
    <view class="label">详细内容</view>
    <textarea class="textarea" placeholder="请输入内容" value="{{form.content}}" bindinput="onInput" data-field="content" />
  </view>

  <view class="form-item">
    <view class="label">待办类型</view>
    <picker range="{{typeOptions}}" range-key="label" value="{{typeIndex}}" bindchange="onTypeChange">
      <view class="picker-box">{{typeOptions[typeIndex].label}}</view>
    </picker>
  </view>

  <view class="form-item">
    <view class="label">优先级</view>
    <radio-group class="radio-group" bindchange="onPriorityChange">
      <label class="radio"><radio value="0" checked="{{form.priority === '0'}}"/>低</label>
      <label class="radio"><radio value="1" checked="{{form.priority === '1'}}"/>中</label>
      <label class="radio"><radio value="2" checked="{{form.priority === '2'}}"/>高</label>
    </radio-group>
  </view>

  <view class="form-item">
    <view class="label">状态</view>
    <radio-group class="radio-group" bindchange="onStatusChange">
      <label class="radio"><radio value="0" checked="{{form.status === '0'}}"/>未完成</label>
      <label class="radio"><radio value="1" checked="{{form.status === '1'}}"/>已完成</label>
    </radio-group>
  </view>

  <view class="form-item">
    <view class="label">截止时间 <text style="color:red">*</text></view>
    <view class="picker-group">
      <picker mode="date" value="{{date}}" bindchange="onDateChange">
        <view class="picker-box">{{date || '选择日期'}}</view>
      </picker>
      <picker mode="time" value="{{time}}" bindchange="onTimeChange">
        <view class="picker-box">{{time || '选择时间'}}</view>
      </picker>
    </view>
  </view>

  <button class="save-btn" bindtap="submit">保存待办</button>
</view>