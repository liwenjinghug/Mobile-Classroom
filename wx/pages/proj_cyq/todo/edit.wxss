page { background-color: #f5f7fa; }
.container { padding: 30rpx; }
.form-item { background: #fff; padding: 24rpx; border-radius: 12rpx; margin-bottom: 24rpx; }
.label { font-size: 28rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.input, .textarea { font-size: 28rpx; width: 100%; }
.textarea { height: 160rpx; }
.picker-group { display: flex; gap: 20rpx; }
.picker-box { border: 1rpx solid #eee; padding: 10rpx 20rpx; border-radius: 8rpx; color: #666; font-size: 28rpx; background-color: #fafafa; }
.radio-group { display: flex; align-items: center; }
.radio { margin-right: 40rpx; font-size: 28rpx; }
.save-btn { background: #2d8cf0; color: #fff; margin-top: 60rpx; border-radius: 50rpx; box-shadow: 0 4rpx 12rpx rgba(45, 140, 240, 0.3); }