/* 登录页面样式 - 现代简洁风格 */

/* 页面容器 */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 30%, #e1f5fe 60%, #b3e5fc 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰背景 - 简笔画风格图案 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

/* 简笔画装饰圆圈 */
.circle-1 {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  border: 3rpx dashed rgba(100, 120, 150, 0.15);
  border-radius: 50%;
  top: -150rpx;
  right: -100rpx;
}

.circle-2 {
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  border: 2rpx solid rgba(100, 120, 150, 0.1);
  border-radius: 50%;
  top: 200rpx;
  left: -80rpx;
}

/* 额外的简笔画装饰元素 */
.header-bg::before {
  content: '';
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dotted rgba(100, 120, 150, 0.12);
  border-radius: 50%;
  bottom: 300rpx;
  right: 60rpx;
}

.header-bg::after {
  content: '';
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border: 2rpx dashed rgba(100, 120, 150, 0.1);
  transform: rotate(45deg);
  bottom: 150rpx;
  left: 80rpx;
}

/* 装饰线条 */
.deco-line-1 {
  position: absolute;
  width: 180rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(100, 120, 150, 0.12), transparent);
  top: 350rpx;
  right: 40rpx;
  transform: rotate(-15deg);
}

.deco-line-2 {
  position: absolute;
  width: 140rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(100, 120, 150, 0.1), transparent);
  bottom: 200rpx;
  left: 50rpx;
  transform: rotate(20deg);
}

/* 装饰小圆点 */
.deco-dot-1 {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: rgba(100, 120, 150, 0.15);
  border-radius: 50%;
  top: 280rpx;
  right: 100rpx;
}

.deco-dot-2 {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: rgba(100, 120, 150, 0.12);
  border-radius: 50%;
  top: 450rpx;
  left: 120rpx;
}

.deco-dot-3 {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid rgba(100, 120, 150, 0.1);
  border-radius: 50%;
  bottom: 350rpx;
  right: 80rpx;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.logo-icon {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  border: 2rpx solid rgba(100, 120, 150, 0.1);
}

.logo-text {
  font-size: 70rpx;
}

.logo-img {
  width: 100rpx;
  height: 100rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 4rpx;
}

.app-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* 登录卡片 - 玻璃/冰块质感效果 */
.login-card {
  margin: 0 40rpx;
  padding: 50rpx 40rpx;
  /* 冰块质感：多层渐变叠加 */
  background:
    linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(255, 255, 255, 0.6) 50%, rgba(240, 248, 255, 0.75) 100%);
  backdrop-filter: blur(24rpx) saturate(180%);
  -webkit-backdrop-filter: blur(24rpx) saturate(180%);
  border-radius: 30rpx;
  /* 多层阴影模拟冰块折射 */
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9),
    inset 0 -2rpx 6rpx rgba(200, 220, 240, 0.3);
  /* 冰块边缘高光 */
  border: 1rpx solid rgba(255, 255, 255, 0.95);
  border-top: 2rpx solid rgba(255, 255, 255, 1);
  border-left: 2rpx solid rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
  overflow: hidden;
}

/* 冰块光泽效果 */
.login-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 100%);
  border-radius: 30rpx 30rpx 0 0;
  pointer-events: none;
}

/* 冰块底部阴影 */
.login-card::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(180, 200, 220, 0.1) 0%, transparent 100%);
  border-radius: 0 0 30rpx 30rpx;
  pointer-events: none;
}

/* 输入组 - 玻璃质感输入框 */
.input-group {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow:
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.input-group:focus-within {
  border-color: rgba(100, 180, 255, 0.6);
  background: rgba(255, 255, 255, 0.75);
  box-shadow:
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.9),
    0 4rpx 16rpx rgba(100, 180, 255, 0.15);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.login-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #2c3e50;
  background: transparent;
  border: none;
}

.placeholder {
  color: #95a5a6;
  font-size: 28rpx;
}

/* 验证码区域 */
.captcha-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.captcha-input-wrapper {
  flex: 1;
  margin-bottom: 0;
}

.captcha-img-wrapper {
  flex-shrink: 0;
  width: 200rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(200, 210, 220, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.captcha-img {
  width: 100%;
  height: 100%;
}

.captcha-btn {
  padding: 16rpx 24rpx;
  background: #3498db;
  border-radius: 12rpx;
}

.captcha-btn text {
  font-size: 24rpx;
  color: #ffffff;
}

.captcha-tip {
  text-align: center;
  margin-bottom: 20rpx;
}

.captcha-tip text {
  font-size: 24rpx;
  color: #95a5a6;
}

.error-msg {
  color: #e74c3c;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: rgba(231, 76, 60, 0.08);
  border-radius: 12rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(52, 152, 219, 0.25);
  border: none;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.login-btn text {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 8rpx;
}

/* 底部说明 */
.footer-text {
  text-align: center;
  margin-top: 50rpx;
  position: relative;
  z-index: 1;
}

.footer-text text {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 调试信息 */
.debug-info {
  margin: 30rpx 40rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(200, 210, 220, 0.3);
}

.debug-title {
  color: #3498db;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.debug-content {
  color: #666666;
  word-break: break-all;
  white-space: pre-wrap;
}
