.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 留出底部栏高度 */
}

/* ... (保留原有 header, title, meta 等样式) ... */
.article-header {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}
.meta {
  font-size: 26rpx;
  color: #999;
}
.meta text {
  margin-right: 20rpx;
}
.author {
  color: #576b95;
}
.cover-img {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.article-digest {
  margin-bottom: 40rpx;
}
.digest-card {
  background-color: #f9f9f9;
  padding: 24rpx;
  border-left: 8rpx solid #2d8cf0;
  border-radius: 4rpx;
  display: flex;
  align-items: flex-start;
}
.digest-icon {
  font-size: 36rpx;
  color: #2d8cf0;
  margin-right: 16rpx;
  line-height: 1;
  margin-top: -6rpx;
}
.digest-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* --- (新增) 富文本字体支持 --- */
.ql-font-SimSun {
  font-family: "SimSun", "宋体";
}
.ql-font-SimHei {
  font-family: "SimHei", "黑体";
}
.ql-font-Microsoft-YaHei {
  font-family: "Microsoft YaHei", "微软雅黑";
}
.ql-font-KaiTi {
  font-family: "KaiTi", "楷体";
}
.ql-font-FangSong {
  font-family: "FangSong", "仿宋";
}

/* --- (新增) 字号支持 --- */
.ql-size-small {
  font-size: 24rpx;
}
.ql-size-large {
  font-size: 36rpx;
}
.ql-size-huge {
  font-size: 48rpx;
}

/* --- (新增) 对齐支持 --- */
.ql-align-center {
  text-align: center;
}
.ql-align-right {
  text-align: right;
}
.ql-align-justify {
  text-align: justify;
}

.ql-code-unified {
  display: block;
  background-color: #f6f8fa;
  border: 1rpx solid #e1e4e8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  
  font-family: "Consolas", "Courier New", monospace;
  font-size: 24rpx;
  line-height: 1;
  color: #333;
  
  /* 必须是 pre，这样 \n 才会换行，且保留缩进 */
  white-space: pre; 
  overflow-x: auto;
}

/* ... (保留 article-content, attachment, bottom-bar 等样式) ... */
.article-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
  margin-bottom: 40rpx;
}
.attachment-box {
  margin-top: 40rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}
.att-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.att-item {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}
.att-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}
.att-name {
  flex: 1;
  font-size: 28rpx;
  color: #2d8cf0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 20rpx;
}
.att-arrow {
  font-size: 24rpx;
  color: #999;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}
.action-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding: 12rpx 50rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
}
.action-item text {
  margin: 0 10rpx;
}
.icon {
  font-size: 36rpx;
}
.liked {
  color: #f56c6c;
}
.txt-preview-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.txt-content-box {
  width: 90%;
  height: 80%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.txt-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 32rpx;
  background-color: #fcfcfc;
}
.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}
.txt-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.txt-scroll text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
  white-space: pre-wrap; 
}