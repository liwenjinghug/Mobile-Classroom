page {
  background-color: #f7f8fa;
}
.container {
  padding-bottom: 30rpx;
}

/* 顶部 Tab */
.nav-tabs {
  display: flex;
  background: #fff;
  height: 88rpx;
  line-height: 88rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 1rpx 5rpx rgba(0,0,0,0.05);
  /* (已移除 padding-right) */
}
.nav-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
}
.nav-item.active {
  color: #2d8cf0;
  font-weight: 600;
}
.nav-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #2d8cf0;
  border-radius: 2rpx;
}

/* (新增) 悬浮通知按钮 */
.float-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}
.float-btn:active {
  background-color: #f0f0f0;
}
.notice-icon {
  font-size: 40rpx;
}

/* 帖子样式 */
.post-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}
.user-info {
  display: flex;
  flex-direction: column;
}
.nickname {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.post-time {
  font-size: 24rpx;
  color: #999;
}
.post-body {
  margin-bottom: 20rpx;
}
.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}
.post-imgs {
  display: flex;
  flex-wrap: wrap;
  margin-top: 15rpx;
}
.p-img {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}
.post-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 10rpx;
}
.action-btn {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  color: #666;
  font-size: 26rpx;
  padding: 10rpx;
}
.icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}
.icon.liked {
  color: #ff4d4f;
}

/* 评论区样式 (仿朋友圈) */
.comment-box {
  background-color: #f7f7f7;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  position: relative;
}
.triangle {
  position: absolute;
  top: -12rpx;
  left: 40rpx; 
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #f7f7f7;
}
.like-list {
  color: #333;
  padding-bottom: 6rpx;
  line-height: 1.5;
  border-bottom: 1rpx solid transparent; 
}
.like-icon {
  color: #576b95;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.line {
  height: 1rpx;
  background-color: #e5e5e5;
  margin: 6rpx 0;
}
.comment-row {
  line-height: 1.5;
  margin-bottom: 6rpx;
}
.comment-row:last-child {
  margin-bottom: 0;
}
.comment-row:active {
  background-color: #e5e5e5;
}
.c-user {
  color: #576b95; 
  font-weight: 500;
}
.c-text {
  color: #333;
}

/* 文章样式 (保持不变) */
.article-item {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}
.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.article-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.article-meta {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.tag {
  background: #e6f7ff;
  color: #1890ff;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 15rpx;
}
.author {
  margin-right: 15rpx;
}
.article-cover image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background-color: #eee;
}

.empty {
  text-align: center;
  color: #999;
  padding: 50rpx;
  font-size: 28rpx;
}
.loading {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* (新增) 通知弹窗样式 */
.notice-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.notice-box {
  width: 85%;
  height: 70%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative; /* 增加相对定位，用于放置绝对定位的关闭按钮 */
}
.n-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.n-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}
.n-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.n-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}
.n-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.n-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.n-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.n-time {
  font-size: 22rpx;
  color: #999;
}
.n-content {
  font-size: 26rpx;
  color: #666;
}
.n-empty {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}
.n-close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx 30rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  z-index: 10;
}