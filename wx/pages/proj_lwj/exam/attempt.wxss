/* å€’è®¡æ—¶æ˜¾ç¤º */
.meta {
  color: #ef4444;
  margin-bottom: 24rpx;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  position: relative;
  z-index: 1;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #fee2e2 100%);
  border-radius: 16rpx;
  border: 2rpx solid #fca5a5;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.15);
  animation: timePulse 2s ease-in-out infinite;
}

