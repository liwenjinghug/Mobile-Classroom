}

/* é¢˜ç›®å¡ç‰‡ */
.question {
  background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow:
    0 8rpx 24rpx rgba(59, 130, 246, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  z-index: 1;
  transition: all 0.3s ease;
}

/* é¢˜ç›®å¡ç‰‡é¡¶éƒ¨æ¸å˜æ¡ */
.question::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  opacity: 0.8;
}

/* é¢˜ç›®æ ‡é¢˜ */
.q-title {
  font-weight: 700;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.7;
  color: #1e293b;
  padding-left: 8rpx;
  border-left: 4rpx solid #3b82f6;
  position: relative;
}

/* é€‰é¡¹æ ·å¼ */
.option {
  display: block;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.option::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #3b82f6, #8b5cf6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

/* é€‰é¡¹æ¿€æ´»æ•ˆæœ */
.option:active {
  transform: translateX(4rpx);
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-color: #3b82f6;
}

.option:active::before {
  opacity: 1;
}

/* Radio å’Œ Checkbox ç¾åŒ– */
radio, checkbox {
  transform: scale(1.2);
  margin-right: 12rpx;
}

/* æ–‡æœ¬è¾“å…¥æ¡† */
textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafbff;
  color: #1e293b;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

textarea:focus {
  border-color: #3b82f6;
  background: #ffffff;
  box-shadow:
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.04),
    0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

/* æ“ä½œåŒºåŸŸ */
.actions {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.actions button {
  width: 85%;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1e40af 100%);
  color: #fff;
  border-radius: 20rpx;
  border: none;
  box-shadow:
    0 12rpx 28rpx rgba(59, 130, 246, 0.4),
    0 4rpx 12rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* æŒ‰é’®æ³¢çº¹æ•ˆæœ */
.actions button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.actions button:active::before {
  width: 400rpx;
  height: 400rpx;
}

.actions button:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow:
    0 6rpx 16rpx rgba(59, 130, 246, 0.4),
    0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.actions button::after {
  content: 'âœ“';
  margin-left: 8rpx;
  font-size: 36rpx;
}

