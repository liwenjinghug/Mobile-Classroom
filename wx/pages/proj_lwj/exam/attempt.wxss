.page { padding: 12rpx; }
.header { font-size: 30rpx; margin-bottom: 8rpx; font-weight: bold; }
.meta { color:#f33; margin-bottom: 12rpx; font-size: 28rpx; }

.question {
  background:#fff;
  padding:12rpx;
  margin-bottom:12rpx;
  border-radius:6rpx;
}

.q-title {
  font-weight:bold;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.option {
  display:block;
  padding:6rpx 0;
  font-size: 26rpx;
}

.actions {
  text-align:center;
  margin-top:12rpx;
}

.actions button {
  width: 80%;
  background: linear-gradient(135deg, #1890ff 0%, #66b1ff 100%);
  color: #fff;
}

/* Anti-copy: disable selection and long-press callout on non-input content */
.page, .question, .q-title, .option {
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-touch-callout: none;
}
/* Allow selection and standard behavior within input area */
textarea {
  -webkit-user-select: text;
  -ms-user-select: text;
  user-select: text;
  -webkit-touch-callout: default;
}
