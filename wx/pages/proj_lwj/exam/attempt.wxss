.page { padding: 12rpx; }
.header { font-size: 30rpx; margin-bottom: 8rpx; font-weight: bold; }
.meta { color:#f33; margin-bottom: 12rpx; font-size: 28rpx; }

.question {
  background:#fff;
  padding:12rpx;
  margin-bottom:12rpx;
  border-radius:6rpx;
}

.q-title {
  font-weight:bold;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.option {
  display:block;
  padding:6rpx 0;
  font-size: 26rpx;
}

.actions {
  text-align:center;
  margin-top:12rpx;
}

.actions button {
  width: 80%;
  background-color: #1890ff;
  color: #fff;
}


