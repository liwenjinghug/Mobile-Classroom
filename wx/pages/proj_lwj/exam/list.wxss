.page {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.header {
  font-size: 34rpx;
  font-weight: 700;
  color: #303133;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

/* 筛选器样式 */
.filter-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 12rpx 0;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 26rpx;
  color: #666;
  border-bottom: 3rpx solid transparent;
  transition: all 0.2s;
}

.filter-item.active {
  color: #409eff;
  font-weight: 600;
  border-bottom-color: #409eff;
}

/* 考试项样式 */
.exam-item {
  background: #fff;
  padding: 24rpx;
  padding-bottom: 88rpx; /* 避免按钮覆盖内容 */
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f0f0f0;
  position: relative;
}

.exam-item.has-score { padding-bottom: 128rpx; }

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-weight: 600;
  font-size: 30rpx;
  color: #303133;
  flex: 1;
  line-height: 1.5;
}

.status-tag {
  padding: 6rpx 14rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  white-space: nowrap;
  margin-left: 12rpx;
  font-weight: 500;
}

.status-pending { background: #ecf5ff; color: #409eff; }
.status-submitted { background: #fff7e6; color: #e6a23c; }
.status-graded { background: #f0f9eb; color: #67c23a; }
.status-expired { background: #f5f5f5; color: #909399; }
.status-upcoming { background: #f8f9fb; color: #666; }

.exam-info { margin-bottom: 16rpx; }

.info-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.info-row .label { color: #666; min-width: 140rpx; }
.info-row .value { color: #333; flex: 1; }

/* 成绩显示区域更轻柔 */
.score-section {
  margin-top: 16rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
}

.score-section.score-passed { background: #f6ffed; border-color: #67c23a; }
.score-section.score-passed .score-main { color: #67c23a; }
.score-section.score-passed .score-status { color: #67c23a; background: rgba(103, 194, 58, 0.12); padding: 6rpx 12rpx; border-radius: 4rpx; font-weight: 500; }

.score-section.score-failed { background: #fff7e6; border-color: #e6a23c; }
.score-section.score-failed .score-main { color: #e6a23c; }
.score-section.score-failed .score-status { color: #e6a23c; background: rgba(230, 162, 60, 0.12); padding: 6rpx 12rpx; border-radius: 4rpx; font-weight: 500; }

.score-label { font-size: 24rpx; color: #666; font-weight: 500; }
.score-display { display: flex; align-items: baseline; gap: 6rpx; }
.score-main { font-size: 46rpx; font-weight: 700; line-height: 1; }
.score-unit, .score-total { font-size: 24rpx; color: #999; }
.score-status { font-size: 22rpx; }

.actions {
  position: absolute; left: 24rpx; bottom: 24rpx;
  display: flex; gap: 12rpx;
}

.actions button {
  min-width: 120rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 18rpx;
  border: none;
  transition: all 0.2s;
}

.start-btn {
  background: linear-gradient(135deg, #1890ff 0%, #66b1ff 100%);
  color: #fff !important;
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.25);
  border: none;
}

.pending-btn {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  color: #b36b00 !important;
  border: 2rpx solid #ffb74d !important;
  box-shadow: 0 2rpx 6rpx rgba(255, 152, 0, 0.15);
}

.actions button:active { transform: scale(0.98); opacity: 0.92; }

.loading { text-align: center; padding: 60rpx 0; color: #909399; font-size: 28rpx; }
.empty { text-align: center; color: #909399; margin-top: 80rpx; font-size: 28rpx; }

.error-box { background: #fff2f0; border: 1rpx solid #ffccc7; border-radius: 8rpx; padding: 16rpx; margin-bottom: 16rpx; }
.error-box text { color: #ff4d4f; font-size: 26rpx; }
.error-box button { margin-top: 8rpx; }
